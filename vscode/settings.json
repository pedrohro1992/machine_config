{
    "editor.fontFamily": "CaskaydiaMono Nerd Font",
    "editor.fontSize": 14,
    "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
    "workbench.editor.editorActionsLocation": "hidden",
    "workbench.activityBar.location": "hidden",
    "vs-kubernetes": {
        "vscode-kubernetes.helm-path-linux": "/home/pedro/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
        "vscode-kubernetes.minikube-path-linux": "/home/pedro/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
    },
    //Vim Plugin Configs
    "vim.easymotion": true,
    "vim.leader": "<space>",
    "vim.incsearch": true,
    "vim.highlightedyank.enable": true,
    "vim.hlsearch": true,
    "vim.sneak": true,
    "vim.useSystemClipboard": true,
    "vim.smartRelativeLine": true,
    "vim.insertModeKeyBindings": [
        {
            "before": ["j", "k"],
            "after" :["<Esc>"]
        }
    ],
    "vim.normalModeKeyBindings": [
        {
            "before": ["<tab>"],
            "commands" :["workbench.action.nextEditor"]
        },
        {
            "before": ["<leader>", "w"],
            "commands" :[":w"]
        },
        {
            "before": ["<leader>", "q"],
            "commands" :[":q"]
        },
        {
          "before": ["<leader>", "e"],
          "commands": ["workbench.view.explorer"]
        },
        {
          "before": ["<leader>", "f", "f"],
          "commands": ["workbench.action.quickOpen"]
        },
        {
          "before": ["<leader>", "f", "w"],
          "commands": ["actions.find"]
        },
        {
          "before": ["<leader>", "f", "W"],
          "commands": ["workbench.action.findInFiles"]
        },
    ],
    "vim.handleKeys": {
        "<C-p>": false,
        "<C-z>": true,
        "<C-f>": false,
    },
    "glassit.alpha": 235,
    "workbench.colorTheme": "Kanagawa",
    "[jsonc]": {
        "editor.defaultFormatter": "esbenp.prettier-vscode"
    }
    
}
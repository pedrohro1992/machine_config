{
  //Workbench and Editor Configs
  "redhat.telemetry.enabled": false,
  "[python]": {
    "editor.formatOnType": true
  },
  "editor.mouseWheelZoom": true,
  "editor.codeActionsOnSave": {
    "source.fixAll": "explicit",
    "source.sortImports": "explicit"
  },
  "editor.formatOnSave": true,
  "workbench.startupEditor": "none",
  "security.workspace.trust.untrustedFiles": "open",
  "explorer.confirmDelete": false,
  "git.openRepositoryInParentFolders": "never",
  "workbench.settings.applyToAllProfiles": ["editor.fontSize"],
  "terminal.integrated.fontSize": 14,
  "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
  "terminal.integrated.cursorStyle": "line",
  "editor.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.renderWhitespace": "none",
  "editor.fontSize": 14,
  "workbench.activityBar.location": "hidden",
  "window.menuBarVisibility": "toggle",
  "workbench.iconTheme": "vscode-icons",
  "workbench.colorTheme": "Kanagawa",
  "files.associations": {
    "*plays.yml": "ansible",
    "*init.yml": "yaml"
  },

  //VScode Icons Configs
  "vsicons.dontShowNewVersionMessage": true,

  //Findt It Faster Configs 
  "find-it-faster.advanced.disableStartupChecks": true,
  "find-it-faster.general.killTerminalAfterUse": true,
  "find-it-faster.general.hideTerminalAfterFail": false,
  "find-it-faster.general.hideTerminalAfterSuccess": false, 

  //Git Project Manager Configs
  "gitProjectManager.baseProjectsFolders": ["~/Workspace"],

  //VIM Configs
  "vim.easymotion": true,
  "vim.leader": "<space>",
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.useSystemClipboard": true,
  "vim.smartRelativeLine": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ], 
   "vim.normalModeKeyBindings": [
    {
      "before": ["<C-z>"],
      "commands": ["workbench.action.togglePanel"]
    },
    {
      "before": ["<tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<S-k>"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": [":w"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [":q"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "F"],
      "commands": ["find-it-faster.findFiles"]
    },
    {
      "before": ["<leader>", "f", "w"],
      "commands": ["actions.find"]
    },
    {
      "before": ["<leader>", "f", "W"],
      "commands": ["find-it-faster.findWithinFiles"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["gitProjectManager.openProjectNewWindow"]
    },
    // Better experience with splitscren
    {
      "before": ["<leader>", "v", "s"],
      "commands": [":vsplit"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.focusLeftGroup"]
    }
  ],
  "vim.handleKeys": {
    "<C-p>": false,
    "<C-z>": true,
    "<C-f>": false
  },
  "vim.useCtrlKeys": true,
}

{
  "workbench.activityBar.location": "hidden",
  "window.menuBarVisibility": "toggle",
  "editor.fontFamily": "CaskaydiaMono Nerd Font",
  "editor.formatOnSave": true,
  "editor.fontSize": 14,
  "terminal.integrated.fontFamily": "CaskaydiaMono Nerd Font",
  "find-it-faster.advanced.disableStartupChecks": true,
  "find-it-faster.general.killTerminalAfterUse": true,
  "find-it-faster.general.hideTerminalAfterFail": false,
  "find-it-faster.general.hideTerminalAfterSuccess": false,
  "gitProjectManager.baseProjectsFolders": ["/home/pedroo/Workspace"],
  // Nao lembro que parada e essa
  // "vs-kubernetes": {
  //     "vscode-kubernetes.helm-path-linux": "/home/pedro/.local/state/vs-kubernetes/tools/helm/linux-amd64/helm",
  //     "vscode-kubernetes.minikube-path-linux": "/home/pedro/.local/state/vs-kubernetes/tools/minikube/linux-amd64/minikube"
  // },
  //Vim Plugin Configs
  "vim.easymotion": true,
  "vim.leader": "<space>",
  "vim.incsearch": true,
  "vim.highlightedyank.enable": true,
  "vim.hlsearch": true,
  "vim.sneak": true,
  "vim.useSystemClipboard": true,
  "vim.smartRelativeLine": true,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "k"],
      "after": ["<Esc>"]
    }
  ],
  "vim.normalModeKeyBindings": [
    {
      "before": ["<C-z>"],
      "commands": ["workbench.action.togglePanel"]
    },
    {
      "before": ["<tab>"],
      "commands": ["workbench.action.nextEditor"]
    },
    {
      "before": ["<S-k>"],
      "commands": ["editor.action.showHover"]
    },
    {
      "before": ["<leader>", "w"],
      "commands": [":w"]
    },
    {
      "before": ["<leader>", "q"],
      "commands": [":q"]
    },
    {
      "before": ["<leader>", "e"],
      "commands": ["workbench.view.explorer"]
    },
    {
      "before": ["<leader>", "f", "f"],
      "commands": ["workbench.action.quickOpen"]
    },
    {
      "before": ["<leader>", "f", "F"],
      "commands": ["find-it-faster.findFiles"]
    },
    {
      "before": ["<leader>", "f", "w"],
      "commands": ["actions.find"]
    },
    {
      "before": ["<leader>", "f", "W"],
      "commands": ["find-it-faster.findWithinFiles"]
    },
    {
      "before": ["<leader>", "o"],
      "commands": ["gitProjectManager.openProjectNewWindow"]
    },
    // Better experience with splitscren
    {
      "before": ["<leader>", "v", "s"],
      "commands": [":vsplit"]
    },
    {
      "before": ["<C-l>"],
      "commands": ["workbench.action.focusRightGroup"]
    },
    {
      "before": ["<C-h>"],
      "commands": ["workbench.action.focusLeftGroup"]
    }
  ],
  "vim.handleKeys": {
    "<C-p>": false,
    "<C-z>": true,
    "<C-f>": false
  },
  "[jsonc]": {
    "editor.defaultFormatter": "esbenp.prettier-vscode"
  },
  "workbench.colorTheme": "Kanagawa"
}
